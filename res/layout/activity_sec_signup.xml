<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ladyb"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignUP"
        android:textSize="40sp"
        android:textColor="#ffff"
        android:layout_above="@id/btx_layout"/>

    <RelativeLayout
        android:id="@+id/btx_layout"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_centerVertical="true"
        android:paddingLeft="20dp"
        android:paddingTop="50dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/et2_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Looks like you dont have an account. Lets create a new a account for...."
            android:textColor="#ffff"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/ed2_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:layout_below="@+id/et2_text"/>


        <EditText
            android:id="@+id/ed3_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed2_text"
            android:hint="Password" />


        <Button
            android:id="@+id/bt_agreecon"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_below="@id/ed3_text"
            android:text="Agree and Continue"
            android:background="#068f1a"/>
        <TextView
            android:id="@+id/tx_agree"
            android:layout_below="@id/bt_agreecon"
            android:layout_marginVertical="50sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#ffff"
            android:text="By Selecting and Continue below, i agree to terms of secret and privacy policty"/>
    </RelativeLayout>



</RelativeLayout>