<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ladyb"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi!"
        android:textSize="40sp"
        android:textColor="#ffff"
        android:layout_above="@id/btx_layout"/>

    <RelativeLayout
        android:id="@+id/btx_layout"
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:layout_centerInParent="true"
        android:paddingLeft="20dp"
        android:paddingTop="50dp"
        android:paddingRight="20dp">

        <EditText
            android:id="@+id/et_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColor="#bd160d" />

        <Button
            android:id="@+id/bt_Continue"
            android:layout_width="400dp"
            android:text="Continue"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_text"
            android:background="#bd160d" />

        <TextView
            android:id="@+id/tv_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_Continue"
            android:text="Or"
            android:textColor="#ffff"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />
            <Button
                android:id="@+id/bt_facebook"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_below="@id/tv_or"
                android:text="Continue With Facebook"
                android:drawableLeft="@drawable/facebook"
                android:background="#0fba29"
                android:layout_marginVertical="10dp"/>
        <Button
            android:id="@+id/bt_google"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_below="@id/bt_facebook"
            android:text="Continue With Facebook"
            android:drawableLeft="@drawable/google"
            android:background="#0fba29"
            android:layout_marginVertical="10dp"/>

        <Button
            android:id="@+id/bt_apple"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_below="@id/bt_google"
            android:text="Continue With Facebook"
            android:drawableLeft="@drawable/apple"
            android:background="#0fba29"/>
        <TextView
            android:id="@+id/tx_signup"
            android:layout_below="@id/bt_apple"
            android:layout_marginVertical="50sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#ffff"
            android:text="Dont have an Account? SignUp"/>

        <TextView
            android:id="@+id/tx_forget"
            android:layout_below="@id/tx_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#ffff"
            android:text="Forget your password?"/>
    </RelativeLayout>



</RelativeLayout>